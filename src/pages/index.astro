---

// RUNTIME
const runtime = Astro.locals.runtime
const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await homeAPI( ENVIRONMENT, ENDPOINT )

// API
import { homeAPI } from "@/api/home/index"

const { home_data, services, meta, studies } = data

// IMPORT LAYOUT COMPONENTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS HOME COMPONENT
import Home from "@/components/home/index.astro"

---
<Layout
	description={ meta.description }
	image={ meta.cover }
	title={ meta.title }
>
	<Home
		case_studies={ studies }
		CDN={ CDN }
		ENVIRONMENT={ ENVIRONMENT }
		home_data={ home_data }
		PROJECT={ PROJECT }
		services={ services }
	/>
</Layout>
