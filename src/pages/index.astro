---
// RUNTIME
const runtime = Astro.locals.runtime
const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await homeAPI( ENVIRONMENT, ENDPOINT )

import { homeAPI } from "@/api/home/index"

const { home_data, services, meta, case_studies } = data

// IMPORT LAYOUT COMPONENTS
import Layout from "@/layouts/layout/index.astro"

// HOME COMPONENTS
import Home from "@/components/home/index.astro"

---
<Layout
	description={ meta.description }
	image={ meta.cover }
	title={ meta.title }
>
	<Home
		case_studies={ case_studies }
		CDN={ CDN }
		home_data={ home_data }
		PROJECT={ PROJECT }
		services={ services }
	/>
</Layout>
